@using Mazzimo.ViewModels
@using Mazzimo.Models

@model RenderedPostViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section metatags {
    <link rel="image_src" type="image/jpeg" href="@Model.Post.ImageUrl" />

    <meta name="description" content="@Model.Post.Teaser" />

    <meta property="og:type" content="article" />
    <meta property="og:url" content="@Model.TotalUrl" />
    <meta property="og:title" content="@Model.Post.Title" />
    <meta property="og:description" content="@Model.Post.Teaser" />
    <meta property="og:image:width" content="@Model.Post.ImageWidth" />
    <meta property="og:image:height" content="@Model.Post.ImageHeight" />
    <meta property="og:image" content="@Model.Post.ImageUrl" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:site" content="@("@mazzimo_f")" />
    <meta property="twitter:title" content="@Model.Post.Title" />
    <meta property="twitter:description" content="@Model.Post.Teaser" />
    <meta property="twitter:image" content="@Model.Post.ImageUrl" />

    <meta property="og:site_name" content="Mazzimo" />

}


        <div class="col-lg-6 col-md-8 col-sm-8 singlecol">
            <article>
            <a href="/@Model.Post.Code"><h1>@Model.Post.Title</h1></a>
            <p><i>@Model.Post.PostDate.ToString("dd MMM yyyy")</i></p>
            <div>
                @Html.Raw(Model.RenderedContent)
            </div>
            </article>
            @if(Model.Post.NextPosts != null && Model.Post.NextPosts.Count > 0)
            {
            <div>
            <h1>Other Posts</h1>
                @foreach (Post nextPost in Model.Post.NextPosts)
                { 
                <div>
                    <a href="/@nextPost.Code">
                        <h2>
                            @nextPost.Title
                        </h2>
                    </a>
                </div>                    
                }
            </div>
            }
        </div>
              